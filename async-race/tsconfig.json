{

  "compilerOptions": {
    "target": "es2022",
    "module": "commonjs",
    "sourceMap": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noImplicitAny": true,
    "skipLibCheck": true,
  },

  "include": ["src/**/*"],

  "exclude": ["-asm-*", "_legacy*", "*._legacy*", "_backup*", "*._backup*"]

}
