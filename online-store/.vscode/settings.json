{
    // hide files and folders in explorer
    "files.exclude": {
        // "**/.vscode": true,

        // "**/dist": true,
        "**/public": true,
        // "**/_legacy": true,

        // "**/node_modules": true,

        "**/.eslintrc.js": true,
        "**/.gitignore": true,
        "**/package-lock.json": true,
        // "**/package.json": true,
        "**/tsconfig.json": true,
        // "**/README.md": true,
        "**/webpack.*": true,
    },
    // hide folders in search
    "search.exclude": {
        "**/node_modules": true
    },

    // format on save eslint
    "editor.codeActionsOnSave": {
        "source.fixAll.eslint": true
    },
    "eslint.validate": ["javascript"]

}
